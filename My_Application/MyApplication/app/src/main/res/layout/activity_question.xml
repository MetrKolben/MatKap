<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity"
    tools:layout_editor_absoluteY="25dp">



        <TextView
            android:id="@+id/questionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="106dp"
            android:fontFamily="@font/oxygen"
            android:text="Enter question"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="20sp" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layoutwithAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionId">

            <RadioGroup
                android:id="@+id/radioGroupAnswers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20pt"
                android:layout_marginTop="50dp"
                app:layout_alignSelf="center">

                <RadioButton
                    android:id="@+id/answerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/dark_green"
                    android:fontFamily="@font/oxygen"
                    android:text="Faking"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/answerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/dark_green"
                    android:fontFamily="@font/oxygen"
                    android:text="Nice one"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/answerC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/dark_green"
                    android:fontFamily="@font/oxygen"
                    android:text="Answer C"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/answerD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/dark_green"
                    android:fontFamily="@font/oxygen"
                    android:text="Answer D"
                    android:textSize="20dp" />
            </RadioGroup>
        </com.google.android.flexbox.FlexboxLayout>






        <Button
            android:id="@+id/submitAnswerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutwithAnswers"
            android:text="Potvrdit"
            android:textSize="20sp"
            android:layout_marginHorizontal="80dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="60dp"
            />






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dp"
            android:background="@drawable/rectangle_lightgreen_roundedcorneres">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:alignContent="center"
                app:alignItems="center"
                app:justifyContent="space_evenly">

                <Button
                    android:id="@+id/buttonPrevious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/numberOfQuestion"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oxygen"
                        android:text="@string/numberOfQuestion"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/slash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  /  "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/howManyQuestions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oxygen"
                        android:text="@string/howManyQuestions"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


            </com.google.android.flexbox.FlexboxLayout>


        </RelativeLayout>


    </RelativeLayout>

