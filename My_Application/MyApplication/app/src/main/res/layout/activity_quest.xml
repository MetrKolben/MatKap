<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gardient_rectangle"
    tools:context=".QuestActivity">

    <TextView
        android:id="@+id/dailyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/oxygen"
        android:text="Denní úkoly"
        android:textAlignment="center"
        android:textColor="?attr/colorOnBackground"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/quest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dailyText"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/questText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="quest1Text" />
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:flexDirection="row"
                app:justifyContent="flex_end">


                <TextView
                    android:id="@+id/xpQuest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total XP"/>

            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>


        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginHorizontal="30dp"
            android:progress="50"
            android:progressBackgroundTint="?attr/colorSecondary"
            android:progressTint="?attr/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/quest2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quest1"
        android:layout_marginHorizontal="25sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quest2Text" />

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginHorizontal="30dp"
            android:progress="50"
            android:progressBackgroundTint="?attr/colorSecondary"
            android:progressTint="?attr/colorPrimary" />
    </LinearLayout>


    <LinearLayout


        android:id="@+id/quest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quest2"
        android:layout_marginHorizontal="25sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quest3Text" />

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginHorizontal="30dp"
            android:progress="50"
            android:progressBackgroundTint="?attr/colorSecondary"
            android:progressTint="?attr/colorPrimary" />


    </LinearLayout>

</RelativeLayout>